---
import Menu from "../../public/menu-alt-02-svgrepo-com.svg";
import CloseIcon from "../../public/close-bold.svg";
---

<header class="main-header">
  <h1>milderz<span>.</span></h1>
  <nav>
    <ul class="links">
      <li class="link">Projects</li>
      <li class="link">About</li>
      <li class="link">Contact</li>
      <li class="link">Blog</li>
    </ul>
  </nav>
  <Menu class="menu-icon" height={60} width={60} />
  <CloseIcon class="close-bold" height={40} width={40} />
</header>

<script is:inline>
  const menuIcon = document.querySelector(".menu-icon");
  const closeIcon = document.querySelector(".close-bold");
  const nav = document.querySelector("nav");
  const body = document.querySelector("body");

  menuIcon.addEventListener("click", () => {
    nav.classList.add("nav-active");
    closeIcon.classList.add("close-bold-active");
    menuIcon.classList.add("menu-icon-inactive");
    body.style.overflow = "hidden";
  });
  closeIcon.addEventListener("click", () => {
    nav.classList.remove("nav-active");
    closeIcon.classList.remove("close-bold-active");
    menuIcon.classList.remove("menu-icon-inactive");
    body.style.overflow = "auto";
  });
</script>
<style>
  .main-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 7.5rem;
    z-index: 2;
    position: relative;

    @media screen and (max-width: 800px) {
      position: static;
    }
  }

  h1 {
    flex: 2;
    color: var(--white);
    font-size: 2.4rem;
    font-weight: 700;
    span {
      color: var(--accent);
    }
  }

  .links {
    flex: 1;
    display: flex;
    gap: 4rem;

    .link {
      font-size: 1.4rem;
      color: var(--white-text);
      font-weight: 700;
      cursor: pointer;
      background-color: transparent;
      width: 9.9rem;
      height: 3.4rem;
      display: grid;
      place-items: center;
      border-radius: 0.5rem;
      transition: all ease 0.2s;

      &:hover {
        color: var(--accent);
        background-color: var(--accent-opacity);
      }

      @media screen and (max-width: 800px) {
        border-bottom: 1px solid #585858;
        width: 28.8rem;
        padding: 2.8rem 0;
        display: flex;
        justify-content: start;
        align-items: center;
        border-radius: 0;
        transition: none;
        font-weight: 700;
        font-size: 1.4rem;
      }
    }

    @media screen and (max-width: 800px) {
      flex-direction: column;
      align-items: center;
      gap: 0;
    }
  }

  nav {
    @media screen and (max-width: 800px) {
      /* display: none; */
      visibility: hidden;
      opacity: 0;
      transition: all ease 0.3s;
      position: absolute;
      top: 7.5rem;
      left: 0;
      width: 100%;
      height: 100vh;
      background-color: #0e0e0e;
      z-index: 4;
      padding: 2.4rem 0;
    }
  }

  .menu-icon {
    display: none;
    @media screen and (max-width: 800px) {
      display: block;
      cursor: pointer;
      z-index: 3;
    }
  }
  .menu-icon-inactive {
    display: none;
  }
  .close-bold {
    display: none;
    z-index: 3;
  }

  .close-bold-active {
    display: block;
  }
  .nav-active {
    visibility: visible;
    opacity: 1;
    
  }
</style>
