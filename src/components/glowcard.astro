<div class="glow-card"></div>
<!-- Esto se repetirá dinámicamente para cada projectCard -->

<script is:inline>
  let card = document.querySelector('.glow-card');

  card.addEventListener('mousemove', (e) => {
    const rect = card.getBoundingClientRect();
    const x = e.clientX - rect.left;
    const y = e.clientY - rect.top;

    const xPercent = (x / rect.width * 100);
    const yPercent = (y / rect.height * 100);

    card.style.setProperty('--mouse-x', xPercent + '%');
    card.style.setProperty('--mouse-y', yPercent + '%');

    card.style.background = `
      radial-gradient(circle 1500px at ${x}px ${y}px, rgba(100, 200, 255, 0.15) 0%, transparent 50%),
      rgba(20, 20, 20, 0.8)
    `;
    card.style.backgroundClip = 'padding-box';
  });

  card.addEventListener('mouseleave', () => {
    card.style.background = 'rgba(20, 20, 20, 0.8)';
    card.style.backgroundClip = 'padding-box';
  });
</script>

<style>
        

        .glow-card {
            width: 300px;
            height: 200px;
            background: rgba(163, 53, 53, 0.8);
            border: 2px solid transparent;
            border-radius: 12px;
            position: relative;
            cursor: pointer;
            background-clip: padding-box;
        }

        .glow-card::before {
            content: '';
            position: absolute;
            inset: -2px;
            border-radius: 12px;
            background: radial-gradient(circle 80px at var(--mouse-x, 50%) var(--mouse-y, 50%), 
                rgba(214, 251, 65, 0.8) 0%, 
                rgba(100, 100, 100, 0.3) 100%);
            z-index: -1;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .glow-card:hover::before {
            opacity: 1;
        }
    </style>